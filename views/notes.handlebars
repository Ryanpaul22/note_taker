<div class="row">
  <div class="col-4">
    <form>
      {{> section-title title="Add A Note"}}
      <div class="form-group">
        <input class="form-control" type="text" id="note-input" placeholder="Create your note here"/>
        <button class="mt-1 btn btn-block btn-success" id="submit-btn">Add Note</button>
      </div>
    </form>
  </div>
  <div class="col-8">
    {{> section-title title="Current Notes"}}
    <ul class="list-group">
    {{#each noteList}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
  {{note}}
  
  <button data-id="{{id}}" class="delete btn btn-danger"><i class="fas fa-trash-alt"></i> </button>
</li>
    {{/each}}
    </ul>
  </div>
 
</div>